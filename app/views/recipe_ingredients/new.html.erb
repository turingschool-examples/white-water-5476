<h1>Add Ingredient to <%= @recipe.name %></h1>
<%= form_with url: "/recipes/#{@recipe.id}", method: :post, local: true do |f| %>
  <%= f.label :name, "Ingredient Name" %>
  <%= f.text_field :name %>

  <%= f.label :cost, "Ingredient Cost" %>
  <%= f.number_field :cost %>

  <%= f.submit %>
<% end %>
